<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeManagement.MAUI.MainPage">

    <ScrollView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Entry Grid.Column="0" Text="{Binding Path=Test2}"></Entry>
                <Button Grid.Column="1" Text="Search" Clicked="Button_Clicked"></Button>
            </Grid>
            
            <Entry Grid.Row="0" Grid.Column="0" Text="{Binding Path=Test1}"></Entry>
            <Entry Grid.Row="1" Grid.Column="0" Text="{Binding Path=Test3}"></Entry>
            <Entry Grid.Row="1" Grid.Column="1" Text="{Binding Path=Test4}"></Entry>
        </Grid>
    </ScrollView>

</ContentPage>

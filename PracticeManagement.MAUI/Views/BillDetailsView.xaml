<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeManagement.MAUI.Views.BillDetailsView"
             NavigatedFrom="OnLeaving"
             NavigatedTo="OnArriving"
             Title="BillDetailsView">
    <VerticalStackLayout>
        <DatePicker BindingContext="{Binding dueDate}" DateSelected="DatePicker_DateSelected"></DatePicker>
        <Button
            Text="Ok"
            Clicked="OkClick"
            />
        <Button
            Text="Cancel"
            Clicked="CancelClick"
            />
    </VerticalStackLayout>
</ContentPage>